<section class="section-sm bg-white">
  <% @tradingMarket['best4'].each do |media| %>
    <div class="shell">
      <div class="range">
        <div class="cell-xs-12">
          <div class="section-title">
            <h3><%= media['label']  %></h3>
          </div>
        </div>
        <div class="cell-xs-12">
          <div class="row">
            <div class="isotope" data-isotope-layout="fitRows">
              <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                  <div class="table-custom-wrap">
                    <table class="table-custom table-primary table-primary-type-1 table-fixed">
                      <tbody>
                        <tr>
                          <% media['values'].each do |value| %>
                            <th><%= value['key'] %></th>
                          <% end %>
                        </tr>
                        <% media['4stocks'].each do |stock| %>
                          <tr>
                            <% media['values'].each do |value| %>
                              <% if value['value'] != nil %>
                                <td><%= stock[value['value']] %></td>
                              <% else %>
                                <td title="<%= stock['name'] %>">
                                  <%= link_to stock['name'], {:controller => "stock", :action => "index", :id => stock['name'].parameterize, :isin => stock['isin']} %>
                                </td>
                              <% end %>
                            <% end %>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</section>
